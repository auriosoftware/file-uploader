{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "declaration": true,
    "target": "es2018",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noEmitHelpers": true,
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "lib": [
      "es2018"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
